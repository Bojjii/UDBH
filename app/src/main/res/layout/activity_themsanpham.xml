<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#C9CFCF"
            android:src="@drawable/back_icon" />

        <ImageButton
            android:id="@+id/imgcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:src="@drawable/camera3" />

        <ImageView
            android:id="@+id/imvhinhSP"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgcamera"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/camera2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:text="Vui lòng nhập đầy đủ thông tin sản phẩm cần thêm:"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/thongbao"
            android:layout_below="@+id/imvhinhSP"
            />
        <EditText
            android:id="@+id/edttenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập tên sản phẩm"
            android:layout_below="@+id/thongbao"
            />
        <EditText
            android:id="@+id/edtgiaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập giá sản phẩm"
            android:layout_below="@+id/edttenSP"
            android:inputType="number"
            android:maxLength="10"
            />
        <EditText
            android:id="@+id/edtmotaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập mô tả sản phẩm"
            android:layout_below="@+id/edtgiaSP"
            />

        <EditText
            android:id="@+id/edtmathuonghieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtmotaSP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Nhập mã thương hiệu" />
        <EditText
            android:id="@+id/edtsoluongkho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập số lượng sản phẩm trong kho"
            android:layout_below="@+id/edtmathuonghieu"
            android:inputType="number"
            android:maxLength="10"
            />
        <EditText
            android:id="@+id/edtgiaGoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập giá gốc sản phẩm"
            android:layout_below="@+id/edtsoluongkho"
            android:maxLength="10"
            android:inputType="number"
            />

        <Button
            android:id="@+id/btnthemSP"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_below="@+id/edtgiaGoc"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#50C2C9"
            android:inputType="number"
            android:padding="15dp"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>
